{
  "compilerOptions": {                
    "target": "es2017",                          
    "module": "commonjs",                                                
    "allowJs": true,                                             
    "outDir": "./dist",                        
    "rootDir": "./src",                            
    "strict": true,                           
    "noImplicitAny": true,                          
    "strictPropertyInitialization": false,  
    "moduleResolution": "node",           
    "baseUrl": "./src",                                              
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true,                 
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@services/*":["services/*"],
      "@schemas/*":["schemas/*"]
    }
  },
  "include": ["src"]
}
